#include <stdio.h>
#include <string.h>

int main() {
char str[] = "Vidyavardhaka";
int length = strlen(str);
char x = 'd';
int index = -1;

for(int i=0;i<length;i++)
{
    if(str[i]== x)
    {
        index = i;
        break;
    }
}
if(index == -1)
{
    printf("%c is not found",x);
}
else
{
    printf("%c character is at position %d",x,index);
}
}
